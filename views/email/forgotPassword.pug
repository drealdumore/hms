extends baseEmail

block content
  div(style="padding:60px 30px 30px 30px;border:1px solid #ccd1d6;border-radius:8px")
    p(style="font-size:18px;margin-bottom:30px") Hello #{firstName}!
    p(style="font-size:16px;margin-bottom:10px") You have requested to reset the password to your account. Click the link below to get started.
    div(style="margin:30px 0")
      a(
        href=`${payload}`, target='_blank',
        style="display:inline-block;width:100%;line-height:36px;text-align:center;background-color:#080a0bde;color:#fff;border-radius:5px;text-decoration:none;font-weight:bold;font-size:13px"
      ) RESET MY PASSWORD
    p(style="font-size:16px;margin-bottom:10px")
      | PS: If you did not initiate this request, please ignore this email.
      p(style="font-size:16px;color:#57584e;margin:0;margin-top:24px") Thank you.
    p(style="font-size:16px;color:#57584e;margin:0;margin-top:24px") Best regards, 
    p(style="font-size:16px;color:#57584e;") HMS Team.
